<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yudyalarcon.facturalegal.Presentacion"
    android:background="#4052b5"
    android:elevation="@android:dimen/app_icon_size"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:foregroundGravity="center_vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="inscribete"
        android:id="@+id/button"
        android:onClick="pasarAv2"
        android:nestedScrollingEnabled="false"
        android:background="#147fbd"
        android:textColor="#ffffff"
        android:textColorHighlight="#0d0c0c"
        android:textStyle="bold|normal"
        android:textSize="@dimen/abc_action_bar_content_inset_material"
        android:textColorLink="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/factura"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Factura legal es una aplicación que le permitirá realizar una factura desde su dispositivo inteligente llenando los requisitos que exige la ley, evitándole inconvenientes ante los organismos de control, por el desconocimiento legal.  "
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:textColor="#ffffff" />


</RelativeLayout>
